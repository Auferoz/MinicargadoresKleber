---
import { ClientRouter } from "astro:transitions";
import HeadMeta from "../components/shared/HeadMeta.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Kleber</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		
		<!-- Meta descripción (máx. 150-160 caracteres) -->
		<meta name="description" content="Encuentra los mejores en Chile para venta, arriendo y servicios. Contamos con las mejores marcas y opciones personalizadas para tu proyecto.">
		
		<!-- Palabras clave -->
		<meta name="keywords" content="en Chile, venta de , arriendo de , servicios de , maquinaria pesada">
		
		<!-- Meta viewport para diseño responsivo -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- Autor de la web -->
		<meta name="author" content=" Kleber">
		
		<!-- Meta para región/país específico -->
		<meta name="geo.region" content="CL">
		<meta name="geo.placename" content="Chile">
		<meta name="geo.position" content="-33.4123423;-70.658578">
		<meta name="ICBM" content="-33.4123423, -70.658578">
		
		<!-- Etiqueta Open Graph para redes sociales -->
		<meta property="og:title" content="Kleber en Chile - Venta, Arriendo y Servicios">
		<meta property="og:description" content="Encuentra los mejores en Chile para venta, arriendo y servicios. Contamos con las mejores marcas y opciones personalizadas para tu proyecto.">
		<meta property="og:image" content="https://kleber.com/img/Logo.png">
		<meta property="og:url" content="https://kleber.com/">
		<meta property="og:type" content="website">
		<meta property="og:locale" content="es_CL">

		<!-- Etiqueta Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content=" Kleber en Chile - Venta, Arriendo y Servicios">
		<meta name="twitter:description" content="Encuentra los mejores en Chile para venta, arriendo y servicios. Contamos con las mejores marcas y opciones personalizadas para tu proyecto.">
		<meta name="twitter:image" content="https://kleber.com/img/Logo.png">

		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" type="image/x-icon">

		<!-- Canonical URL -->
		<link rel="canonical" href="https://kleber.com/">

		<!-- Robots -->
		<meta name="robots" content="index, follow">

		<!-- HeadMeta  -->
		<HeadMeta />

		<ClientRouter />
	</head>
	<body>

		<slot />

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
