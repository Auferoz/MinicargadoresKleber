---
import { ClientRouter } from "astro:transitions";
import HeadMeta from "../components/shared/HeadMeta.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/tir.svg" />
		<title>Transportes Kleber | Carga, Arriendo de Minicargadores y Servicios 24/7 en Chile</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		
		<!-- Meta descripción (máx. 150-160 caracteres) -->
		<meta name="description" content="Especialistas en transporte de carga hasta 3.600 kilos, arriendo de minicargadores y servicio de grúas 24/7 en Santiago y todo Chile. Atención inmediata y confiable.">
		
		<!-- Palabras clave -->
		<meta name="keywords" content="Transporte de carga, arriendo de minicargadores, grúas 24/7, transporte en Santiago, materiales pesados, mudanzas, rescate de vehículos, transporte de maquinaria pesada">
		
		<!-- Meta viewport para diseño responsivo -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- Autor de la web -->
		<meta name="author" content="Transportes Kleber">
		
		<!-- Meta para región/país específico -->
		<meta name="geo.region" content="CL">
		<meta name="geo.placename" content="Chile">
		<meta name="geo.position" content="-33.4123423;-70.658578">
		<meta name="ICBM" content="-33.4123423, -70.658578">
		
		<!-- Etiqueta Open Graph para redes sociales -->
		<meta property="og:title" content="Transportes Kleber | Carga, Arriendo de Minicargadores y Servicios 24/7">
		<meta property="og:description" content="Especialistas en transporte de carga, arriendo de minicargadores y servicios de grúas 24/7. Atendemos Santiago y todo Chile con atención inmediata y confiable.">
		<meta property="og:image" content="https://www.transporteskleber.cl/img/Logo.png">
		<meta property="og:url" content="https://www.transporteskleber.cl/">
		<meta property="og:type" content="website">
		<meta property="og:locale" content="es_CL">
		
		<!-- Etiqueta Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Transportes Kleber | Carga, Arriendo de Minicargadores y Servicios 24/7">
		<meta name="twitter:description" content="Transportamos cargas hasta 3.600 kilos y ofrecemos grúas y minicargadores para tus proyectos. Servicio 24/7 confiable en Santiago y Chile.">
		<meta name="twitter:image" content="https://www.transporteskleber.cl/img/Logo.png">
		
		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" type="image/x-icon">
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://www.transporteskleber.cl/">
		
		<!-- Robots -->
		<meta name="robots" content="index, follow">		

		<!-- Script Meta Google Analytics  -->
		<meta name="image" content="https://www.transporteskleber.cl/img/bg_TransporteKleber_Logo.png">

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Transportes Kleber",
				"url": "https://www.transporteskleber.cl/",
				"logo": "https://www.transporteskleber.cl/img/bg_TransporteKleber_Logo.png"
			}
		</script>

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-16877654200"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'AW-16877654200');
		</script>
			

		<!-- HeadMeta  -->
		<HeadMeta />

		<ClientRouter />
	</head>
	<body>

		<slot />

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>

	<script>
		gtag('event', 'conversion', {
			'send_to': 'AW-16877654200/QiLaCPXCyKYaELih8u8-',
			'transaction_id': ''
		});
	</script>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
